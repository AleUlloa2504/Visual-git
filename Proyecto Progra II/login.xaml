<Window x:Class="Proyecto_Progra_II.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Progra_II"
        mc:Ignorable="d"
        Title="login" Height="385.312" Width="800">
    <Border CornerRadius="25" Background="Red" Margin="20,20,20,34">
        <StackPanel Margin="20">
            <Label Content="INGRESAR AL SISTEMA" Foreground="#FFFFFF" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold"/>
            <Separator Background="Black"/>
            <Label Content="USUARIO" Foreground="#F0F4C3" FontSize="20" HorizontalAlignment="Left" FontWeight="SemiBold"/>
            <TextBox x:Name="txtUsuario" FontSize="18"/>
            <Label Content="CONTRASEÑA" Foreground="#F0F4C3" FontSize="20" HorizontalAlignment="Left" FontWeight="SemiBold"/>
            <PasswordBox Name="txbPassword" FontSize="18"/>
            <Button Click="BtnIngresar_Click" Content="INGRESAR" FontSize="20" Margin="20" Name="btnIngresar" Background="Green" Foreground="White" FontWeight="SemiBold"/>
            <Label Name="lblMensaje" Margin="5" Foreground="#F0F4C3" FontSize="20" HorizontalAlignment="Left" FontWeight="SemiBold"/>
        </StackPanel>
    </Border>
</Window>
