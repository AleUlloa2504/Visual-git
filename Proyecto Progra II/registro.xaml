<Window x:Class="Proyecto_Progra_II.registro"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Proyecto_Progra_II"
      mc:Ignorable="d"
      Title="registro" Width="399.5" Height="366">
    <Grid>
        <StackPanel Margin="0,10,0,0" Background="DeepSkyBlue">
            <Label Content="REGISTRO DE USUARIOS" HorizontalAlignment="Left" Margin="116,10,0,0" VerticalAlignment="Top"/>
            <Label Content="Nombre:"/>
            <TextBox Name="txbNombre"/>
            <Label Content="Tipo:"/>
            <TextBox Name="txbTipo"/>
            <Label Content="Usuario:"/>
            <TextBox Name="txbUsuario"/>
            <Label Content="Contraseña:"/>
            <TextBox Name="txbPassword" Height="20"/>
            <Label Content="Confirmar Contraseña:"/>
            <TextBox x:Name="txbConfirmarPassword" Height="18"/>
            <Button Click="BtnGuardar_Click" x:Name="btnGuardar" Content="GUARDAR" Height="30" Background="OrangeRed"/>
        </StackPanel>

    </Grid>
</Window>
